<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h2>Detalhes da Solicitação de Adoção</h2>
                </div>
                <div class="col text-end">
                    <a href="/adoptions" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3"><strong>ID:</strong></div>
                <div class="col-md-9">{{adoptionRequest.id}}</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>Pet:</strong></div>
                <div class="col-md-9">
                    {{adoptionRequest.Pet.name}} ({{adoptionRequest.Pet.species}} - {{adoptionRequest.Pet.breed}})
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>Solicitante:</strong></div>
                <div class="col-md-9">
                    {{adoptionRequest.User.name}}
                    <br>
                    <small class="text-muted">
                        Email: {{adoptionRequest.User.email}}
                        <br>
                        Telefone: {{adoptionRequest.User.phone}}
                    </small>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>Status:</strong></div>
                <div class="col-md-9">
                    <span class="badge {{#if (eq adoptionRequest.status 'approved')}}bg-success{{else if (eq adoptionRequest.status 'rejected')}}bg-danger{{else}}bg-warning{{/if}}">
                        {{adoptionRequest.status}}
                    </span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>Observação:</strong></div>
                <div class="col-md-9">{{adoptionRequest.note}}</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>Data da Solicitação:</strong></div>
                <div class="col-md-9">{{adoptionRequest.createdAt}}</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>Última Atualização:</strong></div>
                <div class="col-md-9">{{adoptionRequest.updatedAt}}</div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex gap-2">
                <a href="/adoptions/{{adoptionRequest.id}}/edit" class="btn btn-primary">Editar</a>
                <form action="/adoptions/{{adoptionRequest.id}}?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir esta solicitação?')">
                        Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
