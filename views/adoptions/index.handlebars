<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h1>{{title}}</h1>
        </div>
        <div class="col text-end">
            <a href="/adoptions/new" class="btn btn-primary">Nova Solicitação</a>
        </div>
    </div>

    {{#if error}}
    <div class="alert alert-danger">
        {{error}}
    </div>
    {{/if}}

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr class="table-dark">
                    <th class="px-3">ID</th>
                    <th class="px-3">Pet</th>
                    <th class="px-3">Solicitante</th>
                    <th class="px-3">Status</th>
                    <th class="px-3" style="width: 140px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#if adoptionRequests.length}}
                    {{#each adoptionRequests}}
                    <tr>
                        <td class="px-3">{{this.id}}</td>
                        <td class="px-3">{{this.pet.name}} ({{this.pet.species}} - {{this.pet.breed}})</td>
                        <td class="px-3">{{this.user.name}}</td>
                        <td class="px-3">
                            <span class="badge {{#if (eq this.status 'approved')}}bg-success{{else if (eq this.status 'rejected')}}bg-danger{{else}}bg-warning{{/if}}">
                                {{this.status}}
                            </span>
                        </td>
                        <td class="px-3 text-nowrap">
                            <a href="{{this.viewUrl}}" class="btn btn-info btn-sm me-1">Ver</a>
                            <a href="{{this.editUrl}}" class="btn btn-warning btn-sm">Editar</a>
                        </td>
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="5" class="text-center py-3">Nenhuma solicitação de adoção encontrada</td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
    </div>
</div>
