<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h2>Novo Pet</h2>
                </div>
                <div class="col text-end">
                    <a href="/pets" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            {{#if error}}
            <div class="alert alert-danger">
                {{error}}
            </div>
            {{/if}}

            <form action="/pets" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{data.name}}" required>
                </div>

                <div class="mb-3">
                    <label for="species" class="form-label">Espécie</label>
                    <select class="form-select" id="species" name="species" required>
                        <option value="">Selecione uma espécie</option>
                        <option value="Dog" {{#if (eq data.species "Dog")}}selected{{/if}}>Cachorro</option>
                        <option value="Cat" {{#if (eq data.species "Cat")}}selected{{/if}}>Gato</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="breed" class="form-label">Raça</label>
                    <input type="text" class="form-control" id="breed" name="breed" value="{{data.breed}}">
                </div>

                <div class="mb-3">
                    <label for="age" class="form-label">Idade (anos)</label>
                    <input type="number" class="form-control" id="age" name="age" value="{{data.age}}" min="0" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descrição</label>
                    <textarea class="form-control" id="description" name="description" rows="3">{{data.description}}</textarea>
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status" required>
                        <option value="available" {{#if (eq data.status "available")}}selected{{/if}}>Disponível</option>
                        <option value="pending" {{#if (eq data.status "pending")}}selected{{/if}}>Pendente</option>
                        <option value="adopted" {{#if (eq data.status "adopted")}}selected{{/if}}>Adotado</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="shelterId" class="form-label">Abrigo</label>
                    <select class="form-select" id="shelterId" name="shelterId" required>
                        <option value="">Selecione um abrigo</option>
                        {{#each shelters}}
                        <option value="{{this.id}}" {{#if (eq this.id ../data.shelterId)}}selected{{/if}}>
                            {{this.name}}
                        </option>
                        {{/each}}
                    </select>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                    <a href="/pets" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
