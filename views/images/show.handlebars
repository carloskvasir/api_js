<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h2>Detalhes da Imagem</h2>
                </div>
                <div class="col text-end">
                    <a href="/images" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <div class="bg-light p-4 rounded">
                    <h5 class="text-muted mb-3">URL da Imagem</h5>
                    <code style="font-size: 1.1em; word-break: break-all; background-color: #ffffff; padding: 15px; border-radius: 8px; display: block; border: 2px dashed #dee2e6;">
                        {{image.url}}
                    </code>
                    <div class="mt-3">
                        <a href="{{image.url}}" target="_blank" class="btn btn-outline-primary">
                            ðŸ”— Abrir URL em nova aba
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3"><strong>Pet:</strong></div>
                <div class="col-md-9">
                    <a href="/pets/{{image.Pet.id}}" class="text-decoration-none">
                        <span class="badge bg-primary">{{image.Pet.name}}</span>
                    </a>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3"><strong>ID da Imagem:</strong></div>
                <div class="col-md-9">
                    <code>{{image.id}}</code>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3"><strong>URL Completa:</strong></div>
                <div class="col-md-9">
                    <div class="input-group">
                        <input type="text" class="form-control" value="{{image.url}}" readonly>
                        <button class="btn btn-outline-secondary" type="button" onclick="navigator.clipboard.writeText('{{image.url}}')">
                            ðŸ“‹ Copiar
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-3"><strong>Criado em:</strong></div>
                <div class="col-md-9">
                    <span class="text-muted">{{image.createdAt}}</span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex gap-2">
                <a href="/images/{{image.id}}/edit" class="btn btn-primary">Editar</a>
                <form action="/images/{{image.id}}/delete" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza?')">
                        Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
